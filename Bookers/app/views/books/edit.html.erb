<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <div class="form-group">
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <%= f.submit 'Update Book' %>
<% end %>

<a href= <% book_path(@book.id) %>>Show</a>
